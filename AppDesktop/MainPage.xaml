<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDesktop.MainPage"
             BackgroundColor="White">
    <!-- Defina a cor de fundo da página -->

    <Grid>
        <!-- Defina uma linha e uma coluna para preencher todo o espaço disponível -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Ajusta a altura para preencher toda a tela -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Ajusta a largura para preencher toda a tela -->
        </Grid.ColumnDefinitions>

        <!-- VerticalStackLayout removido, pois o Grid já pode gerenciar o layout -->

        <Image
            Source="agross.jpg"
            Aspect="AspectFill"
            SemanticProperties.Description="botão de acessi"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"/>

        <!-- Botão adicionado abaixo da imagem -->
        <Button
            x:Name="Login"
            Text="Entrar"
            Clicked="Login_Clicked"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

    </Grid>

</ContentPage>
