                            CheckedChanged="OnClientTypeChanged">
                            <RadioButton.Content>
                                <StackLayout>
                                    <Label Text="PF"/>
                                </StackLayout>
                            </RadioButton.Content>
                        </RadioButton>

                        <RadioButton 
                            x:Name="RadioButtonPJ" 
                             IsEnabled="False"
                            Value="PJ" 
