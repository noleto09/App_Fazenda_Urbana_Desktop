                            HorizontalOptions="StartAndExpand" 
                            WidthRequest="150" 
                            HeightRequest="0"
                            Grid.Column="1"
                            Grid.ColumnSpan="5"
                            Grid.Row="6"
                            Margin="50,05,0,45"/>

                        <Label 
                            Text="Bairro:" 
                            FontSize="15" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start"  
                            Grid.Column="0"
