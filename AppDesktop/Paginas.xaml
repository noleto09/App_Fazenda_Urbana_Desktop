                            Text="ALTERAR"
                            FontSize="19"
                            BackgroundColor="LightGrey"
                            WidthRequest="160"
                            HeightRequest="0"
                            Grid.Column="6"
                            Grid.ColumnSpan="6"
                            Grid.Row="1"
                            Margin="250,0,0,0"
                            Padding="0,10,0,10" />

                        <Button
                            Text="NOVO"
                            FontSize="19"
                            BackgroundColor="#00BFFF"
                            WidthRequest="160"
                            HeightRequest="0"
                            Grid.Column="6"
                            Grid.ColumnSpan="6"
                            Grid.Row="1"
                            Grid.RowSpan="4"
                            Margin="250,0,0,10"
                            Padding="0,10,0,10" />

                        <Button
                            Text="SALVAR"
                            FontSize="19"
                            BackgroundColor="#32CD32"
                            WidthRequest="160"
                            HeightRequest="0"
                            Grid.Column="6"
                            Grid.ColumnSpan="6"
                            Grid.Row="2"
                            Grid.RowSpan="4"
                            Margin="250,50,0,10"
                            Padding="0,10,0,10"
                            Clicked="Button_Salvar_Clicked" />

                        <Image 
                            Source="img_lupa.png" 
                            HeightRequest="50"
                            WidthRequest="40"
                            Aspect="AspectFit"
                            Grid.Column="6"
                            Margin="250,40,110,0"
                            AbsoluteLayout.LayoutBounds="10, 10, 35, 35"
                            AbsoluteLayout.LayoutFlags="None"/>

                        <Image 
                            Source="user_img_semfundo.png" 
                            HeightRequest="50"
                            WidthRequest="30"
                            Aspect="AspectFit"
                            Grid.Column="5"
                            Grid.Row="1"
                            Grid.RowSpan="4"
                            Margin="130,0,0,10"
                            AbsoluteLayout.LayoutBounds="10, 10, 35, 35"
                            AbsoluteLayout.LayoutFlags="None"/>

                        <Image 
                            Source="img_salvar_semfundo.png" 
                            HeightRequest="50"
                            WidthRequest="30"
                            Aspect="AspectFit"
                            Grid.Column="5"
                            Grid.Row="2"
                            Grid.RowSpan="4"
                            Margin="130,50,0,10"
                            AbsoluteLayout.LayoutBounds="10, 10, 35, 35"
                            AbsoluteLayout.LayoutFlags="None"/>

                        <Label 
                            Text="CPF:" 
                            FontSize="15" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start" 
                            WidthRequest="150" 
                            Grid.Column="0"
                            Grid.Row="1"
                            Margin="10,40,0,0"/>
                        <Entry
                            x:Name="cpfEntry"
                            Placeholder="CPF"
                            HorizontalOptions="StartAndExpand" 
                            WidthRequest="200" 
                            HeightRequest="20"
                            Grid.Column="0"
                            Grid.Row="1"
                            Margin="70,20,0,0"/>

                        <Label 
                            Text="NOME DE USUÁRIO:"
                            FontAttributes="Bold"
                            TextColor="Black"
                            FontSize="15" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start" 
                            WidthRequest="150" 
                            Grid.Column="0"
                            Grid.Row="3"
                            Margin="100,50,0,0"/>
                        <Entry
                            x:Name="nomeUsuarioEntry"
                            Placeholder="NOME DE USUÁRIO"
                            HorizontalOptions="StartAndExpand" 
                            WidthRequest="200" 
                            HeightRequest="20"
                            Grid.Column="0"
                            Grid.Row="4"
                            Margin="70,10,0,0"/>

                        <Label 
                            Text="SENHA:" 
                            FontAttributes="Bold"
                            TextColor="Black"
                            FontSize="15" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start" 
                            WidthRequest="150" 
                            Grid.Column="3"
                            Grid.ColumnSpan="4"
                            Grid.Row="3"
                            Margin="130,40,0,0"/>
                        <Entry
                            x:Name="senhaEntry"
                            Placeholder="SENHA"
                            HorizontalOptions="StartAndExpand" 
                            WidthRequest="200" 
                            HeightRequest="20"
                            Grid.Column="3"
                            Grid.ColumnSpan="4"
                            Grid.Row="4"
                            Margin="70,10,0,0"/>


                    </Grid>

                </StackLayout>
            </ContentView>

            <ContentView x:Name="Pagina_Cadastrar_Cliente" BackgroundColor="White" Margin="25,0,0,0"
                IsVisible="False" AbsoluteLayout.LayoutBounds="0, 0, AutoSize, AutoSize" AbsoluteLayout.LayoutFlags="None">
