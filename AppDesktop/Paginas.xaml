                            HorizontalOptions="StartAndExpand" 
                            WidthRequest="150" 
                            HeightRequest="0"
                            Grid.Column="0"
                            Grid.Row="5"
                            Margin="90,40,0,0"/>

                        <Label 
                            Text="N°:" 
                            FontSize="15" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start"  
