                            Grid.Row="0"
                            Grid.RowSpan="4"
                            Margin="0,0,0,10"
                            Padding="45,10,0,15" />

                        <Image 
                            Source="img_lupa.png" 
                            HeightRequest="50"
                            WidthRequest="40"
                            Aspect="AspectFit"
                            Grid.Column="1"
                            Grid.Row="0"
                            Grid.RowSpan="4"
                            Margin="0,0,15,10"
