<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDesktop.Paginas"
             Title="">
    <ContentPage.Content>
        
        
        <AbsoluteLayout>

            <!-- Menu lateral -->
            <StackLayout 
                x:Name="MenuLateral" 
                BackgroundColor="#90ee90" 
                VerticalOptions="FillAndExpand" 
                WidthRequest="250" 
                IsVisible="True"
                AbsoluteLayout.LayoutBounds="0, 0, 250, 1"
                AbsoluteLayout.LayoutFlags="PositionProportional, HeightProportional">

                <!-- Botões do menu lateral -->
                <StackLayout Orientation="Horizontal" Padding="10">
                    <Image 
                        Source="img_home.png" 
                        BackgroundColor="Transparent"
                        HeightRequest="35"
                        WidthRequest="35"
                        Aspect="AspectFit"
                        HorizontalOptions="Start" />
                </StackLayout>
                
               

                <StackLayout Orientation="Horizontal" Padding="6">
                    <ImageButton 
                        Source="img_configuracao.png" 
                        HeightRequest="60"
                        WidthRequest="60"
                        Aspect="AspectFit"
                        BackgroundColor="Transparent"
                        Clicked="Botao_Configuracao"/>
                    <Button 
                        Text="Configuração"
                        FontAttributes="Bold"
                        FontSize="18"
                        TextColor="Black"
                        VerticalOptions="Center" 
                        Clicked="Botao_Configuracao"
                        BackgroundColor="Transparent"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Padding="10">
                    <ImageButton 
                        Source="img_cadastrar_cliente.png" 
                        HeightRequest="30"
                        WidthRequest="30"
                        Aspect="AspectFit"
                        BackgroundColor="Transparent"
                        Clicked="Botao_cadastro_clicavel" />
                    <Button 
                        Text="Cadastrar cliente"
                        FontAttributes="Bold"
                        FontSize="18"
                        TextColor="Black"
                        VerticalOptions="Center" 
                        Clicked="Botao_cadastro_clicavel"
                        BackgroundColor="Transparent"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Padding="10">
                    <ImageButton 
                        Source="img_vendas.png" 
                        HeightRequest="30"
                        WidthRequest="30"
                        Aspect="AspectFit"
                        BackgroundColor="Transparent"
                        Clicked="Botao_Vendas_clicavel"/>
                    <Button 
                        Text="Vendas"
                        FontAttributes="Bold"
                        FontSize="18"
                        TextColor="Black"
                        VerticalOptions="Center" 
                        Clicked="Botao_Vendas_clicavel"
                        BackgroundColor="Transparent"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Padding="10">
                    <ImageButton 
                        Source="isumos_sem_fundo.png" 
                        HeightRequest="30"
                        WidthRequest="30"
                        Aspect="AspectFit"
                        BackgroundColor="Transparent"
                        Clicked="Botao_CadastarPI_clicavel"/>
                    <Button 
                        Text="Insumos e produtos"
                        FontAttributes="Bold"
                        FontSize="18"
                        TextColor="Black"
                        VerticalOptions="Center" 
                        Clicked="Botao_CadastarPI_clicavel"
                        BackgroundColor="Transparent"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Padding="10">
                    <ImageButton 
                        Source="img_relatorio.png" 
                        HeightRequest="30"
                        WidthRequest="30"
                        Aspect="AspectFit"
                        BackgroundColor="Transparent"
                        Clicked="Botao_Relatorio_Clicavel"/>
                    <Button 
                        Text="Relatórios"
                        FontAttributes="Bold"
                        FontSize="18"
                        TextColor="Black"
                        VerticalOptions="Center" 
                        Clicked="Botao_Relatorio_Clicavel"
                        BackgroundColor="Transparent"/>
                </StackLayout>

            </StackLayout>

            <!-- Conteúdo principal -->
            <StackLayout 
                x:Name="MainContent"
                BackgroundColor="#98fb98" 
                VerticalOptions="FillAndExpand"
                AbsoluteLayout.LayoutBounds="250, 0, 1, 1"
                AbsoluteLayout.LayoutFlags="HeightProportional, WidthProportional">
            </StackLayout>

            <Image 
                x:Name="LogoAgrotech"
                Source="logo_agrotech.png"
                HeightRequest="350"
               Margin="1000,400,0,0"/>

            <!-- Botão Home sempre visível no canto -->
            <Image 
                Source="img_home.png" 
                BackgroundColor="Transparent"
                HeightRequest="35"
                WidthRequest="30"
                Aspect="AspectFit"
                AbsoluteLayout.LayoutBounds="10, 10, 35, 35"
                AbsoluteLayout.LayoutFlags="None" />

            <!--Página de configurações-->
            <ContentView
                x:Name="configuracaoPage"
                BackgroundColor="#F8F8FF"
                Margin="25,0,0,0"
                IsVisible="False"
                AbsoluteLayout.LayoutBounds="0, 0, AutoSize, AutoSize"
                AbsoluteLayout.LayoutFlags="None">

                <ScrollView>
                    <StackLayout>

                        <Grid>

                            <Label 
                                Text="Configurações" 
                                FontSize="20" 
                                FontAttributes="Bold" 
                                TextColor="Black" 
                                Margin="0,0,0,0"
                                VerticalOptions="Fill"
                                HorizontalOptions="Start" 
                                Grid.Row="0" 
                                Grid.Column="0"
                                Grid.ColumnSpan="6" />

                        </Grid>


                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                               
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                        <Button
                            Clicked="Button_Cadastrar_Usuario"
                            Text="Cadastrar Funcionários"
                            Margin="50,20,0,0"
                            FontSize="Body"
                            TextColor="Black"
                            WidthRequest="190"
                            BackgroundColor="LightGrey"
                            Grid.Row="0"/>

                        <Button
                            Text="Manual de Ajuda"
                            Margin="50,10,0,0"
                            FontSize="Body"
                            TextColor="Black"
                            WidthRequest="190"
                            BackgroundColor="LightGrey"
                            Grid.Row="1"/>

                        <Button
                            Text="Atualização"
                            Margin="50,10,0,0"
                            FontSize="Body"
                            TextColor="Black"
                            WidthRequest="190"
                            BackgroundColor="LightGrey"
                            Grid.Row="2"/>

                        <Button
                            Text="Suporte e Ajuda"
                            Margin="50,10,0,0"
                            FontSize="Body"
                            TextColor="Black"
                            WidthRequest="190"
                            BackgroundColor="LightGrey"
                            Grid.Row="3"/>
                        
                    </Grid>

                       

                    </StackLayout>
                    
                </ScrollView>
                
                <!-- Página cadastro de usuário-->
            </ContentView>

