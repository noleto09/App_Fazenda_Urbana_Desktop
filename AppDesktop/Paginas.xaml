                            Text="Nome:" 
                            FontSize="15" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start" 
                            Grid.Column="0"
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Margin="10,0,0,15"/>
                        <Entry
                            x:Name="Cl_nome_Entry"
