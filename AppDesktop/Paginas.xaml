                            HeightRequest="0"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Grid.Row="5"
                            Margin="45,40,0,0"/>

                        <Label 
                            Text="Complementar:" 
                            FontSize="15" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start"  
                            Grid.Column="0"
                            Grid.Row="6"
                            Margin="10,0,0,10"/>
                        <Entry
                            x:Name="ComplementarEntry"
                            Placeholder="COMPLEMENTAR"
