                            WidthRequest="160"
                            HeightRequest="0"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Grid.Row="0"
                            Grid.RowSpan="4"
                            Margin="0,100,0,0"
                            Padding="0,10,0,10" 
                            Clicked="Button_Novo_Cliente"/>

                        <Image 
                            Source="user_img_semfundo.png" 
                            HeightRequest="50"
                            WidthRequest="35"
                            Aspect="AspectFit"
                            Grid.Column="1"
                            Grid.ColumnSpan="0"
                            Grid.Row="0"
                            Grid.RowSpan="0"
                            Margin="0,95,120,0"
                            AbsoluteLayout.LayoutBounds="10, 10, 35, 35"
                            AbsoluteLayout.LayoutFlags="None"/>


                        <Button
                            Text="ALTERAR"
                            FontSize="19"
                            BackgroundColor="#1E90FF"
                            WidthRequest="160"
                            HeightRequest="0"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Grid.Row="3"
                            Margin="0,0,0,25"
                            Padding="0,10,0,10"/>

                        <Label 
                            Text="CPF/CNPJ:" 
                            FontSize="15" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start"  
                            Grid.Column="0"
                            Grid.Row="1"
                            Grid.RowSpan="3"
                            Margin="10,25,0,0"/>
                        <Entry
                            x:Name="CpfCnpjEntry"
                             IsEnabled="False"
                            TextChanged="CpfCnpjEntry_TextChanged"
                            Placeholder="CPF/CPNJ"
                            HorizontalOptions="StartAndExpand" 
                            WidthRequest="200" 
                            HeightRequest="0"
                            Grid.Column="0"
                            Grid.Row="0"
                            Grid.RowSpan="5"
                            Margin="90,90,0,0"/>
                        
                        <Label 
                            Text="RG:" 
                            FontSize="15" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start"  
                            Grid.Column="0"
                            Grid.Row="1"
                            Grid.RowSpan="4"
                            Margin="10,80,0,0"/>
                        <Entry
                            x:Name="Cl_Rg_Entry"
                             IsEnabled="False"
                            Placeholder="RG"
                            HorizontalOptions="StartAndExpand" 
                            WidthRequest="150" 
                            HeightRequest="0"
                            Grid.Column="0"
                            Grid.Row="3"
