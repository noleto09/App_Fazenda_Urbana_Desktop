                        <Entry
                            x:Name="Cl_dn_Entry"
                             IsEnabled="False"
                            Placeholder="DATA DE NASCIMENTO"
                            HorizontalOptions="StartAndExpand" 
                            WidthRequest="170" 
                            HeightRequest="0"
                            Grid.Column="0"
                            Grid.Row="4"
                            Margin="110,0,0,0"
